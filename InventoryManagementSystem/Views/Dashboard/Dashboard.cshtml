@model InventoryManagementSystem.Models.Analytics

@{
    ViewData["Title"] = "Dashboard";
    // Safety check to prevent 500 Error if controller sends null
    if (Model == null)
    {
        <div class="p-4 text-red-500">Error: No analytics data available.</div>
        return;
    }
}

<div class="text-center">
    <h1 class="text-4xl font-bold mb-4">Inventory Management Dashboard</h1>
</div>

<!-- Top Metrics -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
    <div class="bg-white p-6 rounded-lg shadow-md text-center">
        <h2 class="text-2xl font-semibold text-gray-700">Total Products</h2>
        <!-- Changed ViewBag to Model -->
        <p class="text-5xl font-bold text-blue-600 mt-2">@Model.TotalProducts</p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md text-center">
        <h2 class="text-2xl font-semibold text-gray-700">Product Categories</h2>
        <!-- Assuming you add CategoryCount to your ViewModel -->
        <p class="text-5xl font-bold text-green-600 mt-2">@Model.CategoryCount</p>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-md text-center">
        <h2 class="text-2xl font-semibold text-gray-700">Suppliers</h2>
        <!-- Assuming you add SupplierCount to your ViewModel -->
        <p class="text-5xl font-bold text-purple-600 mt-2">@Model.SupplierCount</p>
    </div>
</div>

<!-- Detailed Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8 mt-8">
    <!-- Removed duplicate "Total Products" card if the top one exists, or keep it if design requires -->

    <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-red-500">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-gray-500 text-sm font-medium uppercase">Low Stock Items</p>
                <h2 class="text-3xl font-bold text-gray-800">@Model.LowStockCount</h2>
            </div>
            <div class="p-3 bg-red-100 rounded-full text-red-600">
                <!-- Ensure FontAwesome is in _Layout.cshtml -->
                <i class="fas fa-exclamation-triangle text-2xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-green-500">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-gray-500 text-sm font-medium uppercase">Stock Out (Month)</p>
                <h2 class="text-3xl font-bold text-gray-800">@Model.TotalStockOutThisMonth</h2>
            </div>
            <div class="p-3 bg-green-100 rounded-full text-green-600">
                <i class="fas fa-arrow-down text-2xl"></i>
            </div>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-purple-500">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-gray-500 text-sm font-medium uppercase">Inventory Value</p>
                <h2 class="text-3xl font-bold text-gray-800">₱@Model.EstimatedInventoryValue.ToString("N0")</h2>
            </div>
            <div class="p-3 bg-purple-100 rounded-full text-purple-600">
                <i class="fas fa-coins text-2xl"></i>
            </div>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Top Selling Products Bar Chart -->
    <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-bold text-gray-700 mb-4">Top 5 Selling Products</h3>
        <!-- Added Null Check for List -->
        @if (Model.TopProductNames != null && Model.TopProductNames.Count > 0)
        {
            <div class="relative h-64">
                <canvas id="topProductsChart"></canvas>
            </div>
        }
        else
        {
            <div class="h-64 flex items-center justify-center text-gray-400">
                No sales data available yet.
            </div>
        }
    </div>

    <!-- Stock Out Reasons Doughnut Chart -->
    <div class="bg-white p-6 rounded-lg shadow-md">
        <h3 class="text-lg font-bold text-gray-700 mb-4">Stock Out Reasons Breakdown</h3>
        <!-- Added Null Check for List -->
        @if (Model.ReasonLabels != null && Model.ReasonLabels.Count > 0)
        {
            <div class="h-64 flex justify-center relative">
                <canvas id="reasonsChart"></canvas>
            </div>
        }
        else
        {
            <div class="h-64 flex items-center justify-center text-gray-400">
                No stock movement data available yet.
            </div>
        }
    </div>
</div>

@section Scripts {
    <!-- Move Library Here -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Safe Serialization
            const productNames = @Html.Raw(Json.Serialize(Model.TopProductNames ?? new List<string>()));
            const productSales = @Html.Raw(Json.Serialize(Model.TopProductSales ?? new List<int>()));
            const reasonLabels = @Html.Raw(Json.Serialize(Model.ReasonLabels ?? new List<string>()));
            const reasonCounts = @Html.Raw(Json.Serialize(Model.ReasonCounts ?? new List<int>()));

            // Chart 1
            const ctxProducts = document.getElementById('topProductsChart');
            if (ctxProducts && productNames.length > 0) {
                new Chart(ctxProducts, {
                    type: 'bar',
                    data: {
                        labels: productNames,
                        datasets: [{
                            label: 'Quantity Sold',
                            data: productSales,
                            backgroundColor: 'rgba(59, 130, 246, 0.7)',
                            borderColor: 'rgba(59, 130, 246, 1)',
                            borderWidth: 1,
                            borderRadius: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false, // Ensures it fits the div
                        scales: {
                            y: { beginAtZero: true }
                        }
                    }
                });
            }

            // Chart 2
            const ctxReasons = document.getElementById('reasonsChart');
            if (ctxReasons && reasonLabels.length > 0) {
                new Chart(ctxReasons, {
                    type: 'doughnut',
                    data: {
                        labels: reasonLabels,
                        datasets: [{
                            data: reasonCounts,
                            backgroundColor: [
                                'rgba(16, 185, 129, 0.7)',
                                'rgba(239, 68, 68, 0.7)',
                                'rgba(245, 158, 11, 0.7)',
                                'rgba(99, 102, 241, 0.7)',
                                'rgba(107, 114, 128, 0.7)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'right' }
                        }
                    }
                });
            }
        });
    </script>
}