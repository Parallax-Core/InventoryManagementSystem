@model InventoryManagementSystem.Models.Reason

@{
    ViewData["Title"] = "Add Reason";
}

<h1 class="text-3xl font-bold text-gray-800 mb-4">Add New Reason</h1>

<div class="bg-white shadow-md rounded-lg p-6 max-w-lg mx-auto">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

        <div class="mb-4">
            <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Name" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Type" class="block text-sm font-medium text-gray-700">Type (Optional)</label>
            <select asp-for="Type" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                <option value="">-- Select Type --</option>
                <option value="In">Stock In</option>
                <option value="Out">Stock Out</option>
                <option value="Both">Both</option>
            </select>
            <span asp-validation-for="Type" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
            <textarea asp-for="Description" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
            <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
        </div>

        <div class="mt-6">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow">Create</button>
            <a asp-action="Index" class="ml-4 text-gray-600 hover:text-gray-800">Back to List</a>
        </div>
    </form>
</div>