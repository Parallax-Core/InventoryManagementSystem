@model InventoryManagementSystem.Models.Reason

@{
    ViewData["Title"] = "Delete Reason";
}

<h1 class="text-3xl font-bold text-red-600 mb-4">Delete Reason</h1>

<h3 class="text-xl mb-4">Are you sure you want to delete this reason?</h3>

<div class="bg-white shadow-md rounded-lg p-6 max-w-lg mx-auto">
    <dl class="grid grid-cols-1 gap-4">
        <dt class="font-semibold text-gray-700">Name</dt>
        <dd class="text-gray-900">@Model.Name</dd>

        <dt class="font-semibold text-gray-700">Type</dt>
        <dd class="text-gray-900">@Model.Type</dd>

        <dt class="font-semibold text-gray-700">Description</dt>
        <dd class="text-gray-900">@Model.Description</dd>
    </dl>

    <form asp-action="Delete" class="mt-6">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg shadow">Delete</button>
        <a asp-action="Index" class="ml-4 text-gray-600 hover:text-gray-800">Cancel</a>
    </form>
</div>