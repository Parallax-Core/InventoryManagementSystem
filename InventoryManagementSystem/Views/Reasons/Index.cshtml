@model IEnumerable<InventoryManagementSystem.Models.Reason>

@{
    ViewData["Title"] = "Manage Reasons";
}

<div class="flex justify-between items-center mb-4">
    <h1 class="text-3xl font-bold text-gray-800">Stock Movement Reasons</h1>
    <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow">Add Reason</a>
</div>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full bg-white">
        <thead class="bg-gray-800 text-white">
            <tr>
                <th class="py-3 px-6 text-left">Reason Name</th>
                <th class="py-3 px-6 text-left">Description</th>
                <th class="py-3 px-6 text-left">Type</th>
                <th class="py-3 px-6 text-right">Actions</th>
            </tr>
        </thead>
        <tbody class="text-gray-700">
            @foreach (var item in Model)
            {
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 px-6 text-left font-medium">@item.Name</td>
                    <td class="py-3 px-6 text-left">@item.Description</td>
                    <td class="py-3 px-6 text-left">
                        @if (!string.IsNullOrEmpty(item.Type))
                        {
                            <span class="px-2 py-1 bg-gray-200 rounded text-sm">@item.Type</span>
                        }
                    </td>
                    <td class="py-3 px-6 text-right">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 mr-4">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>