@model IEnumerable<InventoryManagementSystem.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="flex justify-between items-center mb-4">
    <h1 class="text-3xl font-bold text-gray-800">Supplier List</h1>
    <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow">Create New</a>
</div>

<!-- Search and Filter Form -->
<div class="bg-white p-4 rounded-lg shadow-md mb-6">
    <form asp-controller="Suppliers" asp-action="Index" method="get" class="flex flex-wrap items-end gap-4">

        <!-- Search by Name -->
        <div class="flex-grow min-w-[200px]">
            <label for="searchString" class="block text-sm font-medium text-gray-700 mb-1">Search Products</label>
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search by name..."
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Filter by Status -->
        <div class="w-40">
            <label for="statusFilter" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
            <select name="statusFilter" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                <option value="">All Statuses</option>
                <!option value="Active" selected="@((string)ViewData["StatusFilter"] == "Active")">Active</!option>
                <!option value="Inactive" selected="@((string)ViewData["StatusFilter"] == "Inactive")">Inactive</!option>
            </select>
        </div>

        <!-- Action Buttons -->
        <div>
            <button type="submit" class="bg-slate-700 hover:bg-slate-800 text-white font-bold py-2 px-6 rounded-md shadow">
                Filter
            </button>
            <a asp-action="Index" class="ml-2 text-gray-600 hover:text-gray-800 text-sm">Clear</a>
        </div>
    </form>
</div>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full bg-white">
        <thead class="bg-gray-800 text-white">
            <tr>
                <th class="py-3 px-6 text-left">Company Name</th>
                <th class="py-3 px-6 text-left w-1/3">Address</th> <!-- Increased width for address -->
                <th class="py-3 px-6 text-left">Primary Contact</th>
                <th class="py-3 px-6 text-left">Status</th>
                <th class="py-3 px-6 text-left">Last Modified</th>
                <th class="py-3 px-6 text-right">Actions</th>
            </tr>
        </thead>
        <tbody class="text-gray-700">
            @foreach (var item in Model)
            {
                var firstContact = item.ContactPersons?.FirstOrDefault();
                <tr class="border-b border-gray-200 hover:bg-gray-100 @(item.IsActive ? "" : "bg-gray-200 opacity-70")">
                    <td class="py-3 px-6 text-left align-top">@Html.DisplayFor(modelItem => item.Name)</td>

                    <!-- *** FIX: Display Full Address *** -->
                    <td class="py-3 px-6 text-left align-top">
                        @if (item.Address != null)
                        {
                            // This combines all non-empty address parts with a comma and space
                            var addressParts = new[]
                            {
                                        item.Address.StreetAddress,
                                        item.Address.Barangay,
                                        item.Address.City,
                                        item.Address.Province,
                                        item.Address.Region,
                                        item.Address.PostalCode
                                        }.Where(s => !string.IsNullOrWhiteSpace(s));

                            <span>@string.Join(", ", addressParts)</span>
                        }
                    </td>

                    <td class="py-3 px-6 text-left align-top">
                        @if (firstContact != null)
                        {
                            <div class="text-sm">
                                <span class="font-semibold">@firstContact.Name</span><br />
                                <span class="text-gray-500">@firstContact.Email</span><br />
                                <span class="text-gray-500">@firstContact.Phone</span>
                            </div>
                        }
                        else
                        {
                            <span class="text-gray-400">N/A</span>
                        }
                    </td>
                    <td class="py-3 px-6 text-left align-top">
                        @if (item.IsActive)
                        {
                            <span class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full text-xs">Active</span>
                        }
                        else
                        {
                            <span class="px-2 py-1 font-semibold leading-tight text-red-700 bg-red-100 rounded-full text-xs">Inactive</span>
                        }
                    </td>
                    <td class="py-3 px-6 text-left text-xs text-gray-500 align-top">
                        @if (!string.IsNullOrEmpty(item.LastModifiedBy))
                        {
                            <div>@item.LastModifiedBy</div>
                            <div>@item.LastModifiedAt.ToLocalTime().ToString("g")</div>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td class="py-3 px-6 text-right align-top whitespace-nowrap">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 mr-3 font-medium">Edit</a>
                        @if (item.IsActive)
                        {
                            <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900 font-medium">Deactivate</a>
                        }
                        else
                        {
                            <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="text-green-600 hover:text-green-900 font-medium">Activate</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>