@model IEnumerable<InventoryManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Products";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
        <p>@TempData["SuccessMessage"]</p>
    </div>
}

<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Product List</h1>
    <div>
        <a asp-action="StockIn" asp-controller="StockMovement" class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg shadow mr-2">Stock In</a>
        <a asp-action="StockOut" asp-controller="StockMovement" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg shadow mr-2">Stock Out</a>
        <a asp-action="Create" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow">Create New</a>
    </div>
</div>

<!-- Search and Filter Form -->
<div class="bg-white p-4 rounded-lg shadow-md mb-6">
    <form asp-controller="Products" asp-action="Index" method="get" class="flex flex-wrap items-end gap-4">

        <!-- Search by Name -->
        <div class="flex-grow min-w-[200px]">
            <label for="searchString" class="block text-sm font-medium text-gray-700 mb-1">Search Products</label>
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search by name..."
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <!-- Filter by Status -->
        <div class="w-40">
            <label for="statusFilter" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
            <select name="statusFilter" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                <option value="">All Statuses</option>
                <!option value="Active" selected="@((string)ViewData["StatusFilter"] == "Active")">Active</!option>
                <!option value="Inactive" selected="@((string)ViewData["StatusFilter"] == "Inactive")">Inactive</!option>
            </select>
        </div>

        <!-- Filter by Category -->
        <div class="w-48">
            <label for="categoryFilter" class="block text-sm font-medium text-gray-700 mb-1">Category</label>
            <select name="categoryFilter" asp-items="ViewBag.CategoryList" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                <option value="">All Categories</option>
            </select>
        </div>

        <!-- Filter by Supplier -->
        <div class="w-48">
            <label for="supplierFilter" class="block text-sm font-medium text-gray-700 mb-1">Supplier</label>
            <select name="supplierFilter" asp-items="ViewBag.SupplierList" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                <option value="">All Suppliers</option>
            </select>
        </div>

        <!-- Action Buttons -->
        <div>
            <button type="submit" class="bg-slate-700 hover:bg-slate-800 text-white font-bold py-2 px-6 rounded-md shadow">
                Filter
            </button>
            <a asp-action="Index" class="ml-2 text-gray-600 hover:text-gray-800 text-sm">Clear</a>
        </div>
    </form>
</div>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full bg-white">
        <thead class="bg-gray-800 text-white">
            <tr>
                <th class="py-3 px-6 text-left">Name</th>
                <th class="py-3 px-6 text-left">Quantity</th>
                <th class="py-3 px-6 text-left">Price</th>
                <th class="py-3 px-6 text-left">Category</th>
                <th class="py-3 px-6 text-left">Supplier</th>
                <th class="py-3 px-6 text-left">Status</th>
                <th class="py-3 px-6 text-left">Last Modified</th>
                <th class="py-3 px-6 text-right">Actions</th>
            </tr>
        </thead>
        <tbody class="text-gray-700">
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="8" class="text-center py-4 text-gray-500">No products found matching your search.</td>
                </tr>
            }
            @foreach (var item in Model)
            {
                <tr class="border-b border-gray-200 hover:bg-gray-100 @(item.IsActive ? "" : "bg-gray-200 opacity-70")">
                    <td class="py-3 px-6 text-left">@item.Name</td>
                    <td class="py-3 px-6 text-left">@item.Quantity</td>
                    <td class="py-3 px-6 text-left">@item.Price.ToString("N2")</td>
                    <td class="py-3 px-6 text-left">@(item.Category?.Name ?? "N/A")</td>
                    <td class="py-3 px-6 text-left">@(item.Supplier?.Name ?? "N/A")</td>
                    <td class="py-3 px-6 text-left">
                        @if (item.IsActive)
                        {
                            <span class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full">Active</span>
                        }
                        else
                        {
                            <span class="px-2 py-1 font-semibold leading-tight text-red-700 bg-red-100 rounded-full">Inactive</span>
                        }
                    </td>
                    <td class="py-3 px-6 text-left text-sm text-gray-500">
                        @item.LastModifiedBy<br>
                        <span class="text-xs">@item.LastModifiedAt.ToLocalTime()</span>
                    </td>
                    <td class="py-3 px-6 text-right whitespace-nowrap">
                        <a asp-action="History" asp-controller="StockMovement" asp-route-id="@item.Id" class="text-purple-600 hover:text-purple-900 mr-4">History</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:text-blue-900 mr-4">Edit</a>
                        @if (item.IsActive)
                        {
                            <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Deactivate</a>
                        }
                        else
                        {
                            <a asp-action="ToggleStatus" asp-route-id="@item.Id" class="text-green-600 hover:text-green-900">Activate</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>