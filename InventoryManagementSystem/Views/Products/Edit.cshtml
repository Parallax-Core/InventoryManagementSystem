@model InventoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h1 class="text-3xl font-bold text-gray-800 mb-4">Edit Product</h1>

<div class="bg-white shadow-md rounded-lg p-6">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4"></div>
        <input type="hidden" asp-for="Id" />

        <!-- Feature 1: Add hidden field for IsActive to preserve its value on save -->
        <input type="hidden" asp-for="IsActive" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Name" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Quantity" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Quantity" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-200" readonly />
                <span class="text-xs text-gray-500">Quantity can only be changed via Stock In/Out movements.</span>
            </div>
            <div>
                <label asp-for="Price" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Price" type="number" step="0.01" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Price" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700">Category</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-red-600 text-sm"></span>
            </div>
            <div class="col-span-2">
                <label asp-for="SupplierId" class="block text-sm font-medium text-gray-700">Supplier</label>
                <select asp-for="SupplierId" asp-items="@ViewBag.Suppliers" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <option value="">-- Select Supplier --</option>
                </select>
                <span asp-validation-for="SupplierId" class="text-red-600 text-sm"></span>
            </div>
        </div>

        <div class="mt-6">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow">Save Changes</button>
            <a asp-action="Index" class="ml-4 text-gray-600 hover:text-gray-800">Back to List</a>
        </div>
    </form>
</div>

