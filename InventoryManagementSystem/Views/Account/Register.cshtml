@model InventoryManagementSystem.Models.Register
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Inventory System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-100">
    <div class="flex items-center justify-center min-h-screen">
        <div class="flex w-full max-w-4xl bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- Branding Section -->
            <div class="hidden md:flex w-1/2 bg-slate-800 text-white items-center justify-center p-12">
                <div class="text-center">
                    <i class="fas fa-boxes-stacked fa-4x mb-4"></i>
                    <h1 class="text-3xl font-bold">Inventory System</h1>
                    <p class="mt-2 text-slate-300">Create your account to get started.</p>
                </div>
            </div>

            <!-- Form Section -->
            <div class="w-full md:w-1/2 p-8">
                <form asp-action="Register" method="post">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Create an Account</h2>

                    <div asp-validation-summary="All" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4"></div>

                    <!-- *** NEW: Replaced FullName with a grid for First/Last Name *** -->
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label asp-for="FirstName" class="block text-gray-700 text-sm font-bold mb-2"></label>
                            <input asp-for="FirstName" class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:border-blue-500" placeholder="e.g., John" required>
                            <span asp-validation-for="FirstName" class="text-red-500 text-xs mt-1"></span>
                        </div>
                        <div>
                            <label asp-for="LastName" class="block text-gray-700 text-sm font-bold mb-2"></label>
                            <input asp-for="LastName" class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:border-blue-500" placeholder="e.g., Doe" required>
                            <span asp-validation-for="LastName" class="text-red-500 text-xs mt-1"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Username" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input asp-for="Username" class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:border-blue-500" placeholder="Choose a username" required>
                        <span asp-validation-for="Username" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input asp-for="Password" class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:border-blue-500" placeholder="••••••••••••" required>
                        <span asp-validation-for="Password" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div class="mb-6">
                        <label asp-for="ConfirmPassword" class="block text-gray-700 text-sm font-bold mb-2"></label>
                        <input asp-for="ConfirmPassword" class="w-full px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:border-blue-500" placeholder="••••••••••••" required>
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div class="flex items-center justify-between">
                        <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:shadow-outline" type="submit">
                            Register
                        </button>
                    </div>
                    <div class="text-center mt-6">
                        <a asp-action="Login" class="inline-block align-baseline font-bold text-sm text-blue-600 hover:text-blue-800">
                            Already have an account? Login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

